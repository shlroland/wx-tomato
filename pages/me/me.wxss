.cantainer {
  background: #f6f6f6;
  min-height: 100vh;
  max-height: 100vh;
  display: flex;
  flex-direction: column;
}
.header {
  height: 170rpx;
  background: #fff;
  display: flex;
  align-items: center;
  color: #fe996f;
  font-size: 22rpx;
  padding: 0 45rpx;
  margin-bottom: 23rpx;
}
.header .avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.header .details {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.header .details .name {
  color: black;
  font-size: 32rpx;
  padding-bottom: 22rpx;
}

.tabs {
  background: #fff;
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 0;
  margin-bottom: 24rpx;
}
.tabs > view {
  width: 50%;
  height: 100%;
  padding: 10rpx 0rpx;
  text-align: center;
}
.tabs > view.hover-active {
  opacity: 0.5;
}

.afterTabs{
  display: inline-block;
  border: 4rpx solid #f87a5f;
  margin-top: -35rpx;
  border-radius: 4rpx;
  margin-left: 10%;
  transition: all 1s;
  width: 30%;
  margin-bottom: 20rpx;
}

.afterTabs.active{
  margin-left: 59%;
}

.container .swiper-wrap{
  min-height: 880rpx;
  padding-bottom: 300rpx;
}
.cantainer .lists {
  height: 880rpx;
  overflow: scroll;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.cantainer .lists .item {
  background: #fff;
  font-size: 32rpx;
  color: #333;
  border-radius: 8rpx;
  padding: 16rpx 28rpx 35rpx 40rpx;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
}

.cantainer .lists .item .time {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.cantainer .lists .item .content {
  display: flex;
  padding-bottom: 24rpx;
}
.cantainer .lists .item .content text {
  padding-right: 25rpx;
}
.cantainer .lists .item .content detail {
  flex: 1;
  flex-wrap: wrap;
}
.qr::after {
  border: none;
}
.qr {
  background: transparent;
  color: #fe996f;
  font-size: 24rpx;
}
